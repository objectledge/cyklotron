<project xmlns:j="jelly:core"
		 xmlns:m="jelly:maven"
         xmlns:ant="jelly:ant"
         xmlns:sql="jelly:sql"
		 xmlns:coral="coral"
         xmlns:define="jelly:define"
		 xmlns:lcms="lcms">

  <goal name="lcms:import">
     <attainGoal name="lcms:init"/>
     <m:pluginVar plugin="coral-maven-plugin" var="ledgeBaseDir" property="ledge.basedir"/>
     <m:pluginVar plugin="coral-maven-plugin" var="rootSubject" property="cms.root.subject"/>
     <m:pluginVar plugin="coral-maven-plugin" var="mappingFile" property="arl.import.mapping"/>
     <coral:dataSource var="coralDataSource"/>
     <coral:arlDataSource var="arlDataSource"/>
     <coral:arlImporter var="arlImporter" sourceDataSource="${arlDataSource}" targetDataSource="${coralDataSource}" ledgeBaseDir="${ledgeBaseDir}" />
     <j:expr value="${arlImporter.execute(mappingFile, false, false, true)}"/>
     <echo>maven import finished</echo>
  </goal>  
         
  <goal name="lcms:init">
    <echo>maven import started</echo>
    <ant:exec executable="dropdb">
     <arg line="-U cyklotron lcms"/>
    </ant:exec>  
    <ant:exec executable="createdb">
     <arg line="-U cyklotron -E UNICODE lcms"/>
    </ant:exec>  
    <m:pluginVar plugin="coral-maven-plugin" var="coralSqlFileEncoding" property="coral.sql.file.encoding"/>	  
    <attainGoal name="coral:init"/>
    <attainGoal name="coral:run-rml"/>
	<coral:dataSource var="coralDataSource"/>
    <coral:sqlRunner dataSource="${coralDataSource}" sourcesList="src/main/sql-sources-init.list" 
    				   fileEncoding="${coralSqlFileEncoding}" baseDir="${basedir}"/>
  </goal>         
</project>
