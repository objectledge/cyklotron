CREATE RESOURCE 'cms.forum.add'
RESOURCE CLASS 'integration.schema_permission'
PARENT '/cms/applications/forum/resources/cms.forum.node/roles/cms.forum.administrator/cms.forum.moderator/cms.forum.participant'
