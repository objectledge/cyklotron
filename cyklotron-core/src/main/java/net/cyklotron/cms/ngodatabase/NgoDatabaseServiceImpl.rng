<grammar xmlns="http://relaxng.org/ns/structure/1.0"
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <define name="sites">
    <element name="sites">
      <oneOrMore>
        <element name="site">
          <!-- name of site within cyklotron -->
          <text />
        </element>
      </oneOrMore>
    </element>
  </define>
  <start>
    <element name="config">
      <interleave>
        <element name="incoming">
          <interleave>
            <element name="sourceURL">
              <data name="anyURI" />
            </element>
          </interleave>
        </element>
        <element name="outgoing">
          <interleave>
            <ref name="sites" />
          </interleave>
        </element>
        <element name="newsFeed">
          <interleave>
            <ref name="sites" />
            <element name="cacheTime">
              <!-- caching time for generated feeds in seconds -->
              <data name="integer" />
            </element>
            <element name="queryDays">
              <!--
                documents added more recently than this number of days
                will be included
              -->
              <data name="integer" />
            </element>
            <element name="type">
              <choice>
                <value type="string">atom_0.3</value>
                <value type="string">rss_1.0</value>
                <value type="string">rss_2.0</value>
              </choice>
            </element>
            <element name="title">
              <text />
            </element>
            <elemnt name="description" />
          </interleave>
        </element>
      </interleave>
    </element>
  </start>
</grammar>

