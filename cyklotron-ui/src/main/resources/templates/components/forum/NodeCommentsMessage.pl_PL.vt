## COMMAND BAR PREPROCESSING
#macro(commandbar)
  <table class="commandBarTable" border="0" width="100%" height="22">
    <tr align="right">
      <td width="90%"></td>
      <td NOWRAP class="usualbutton">
	<a href="$cmsLink.set('mid', $message.getId()).set('state','am')">Odpowiedź</a>
      </td>
      <td NOWRAP class="usualbutton">
    <a href="$cmsLink.set('did',$message.getDiscussion().getId()).set('state','am')">Nowa wiadomość</a>
      </td>
      <td NOWRAP class="usualbutton">
    <a href="$cmsLink.set('did', $message.getDiscussion().getId()).set('state','ml')">Powrót do listy wiadomości</a>
      </td>
    </tr>
  </table>
#end
## END COMMAND BAR PREPROCESSING

#if($message.discussion.state.name != 'hidden')

  WIADOMOŚĆ:

  <table border="0" class="postHeaderTable">
    <tr>
      <td width="10%">
    <b>Nadawca:</b>
      </td>
      <td>
    #cms_personal_credentials($message.getCreatedBy())<br>
      </td>
    </tr>
    <tr>
      <td>
    <b>Data:</b>
      </td>
      <td>
    $format_date.format($message.getCreationTime())<br>
      </td>
    </tr>
    <tr>
      <td>
    <b>Tytuł:</b>
      </td>
      <td>
    $message.getName()<br>
      </td>
    </tr>
  </table>


  <table border="0" class="postContentTable">
    <tr>
      <td>
	<pre>$message.getContent()</pre> 
      </td>
    </tr>
  </table>

  ODPOWIEDZI:

  <table border="0" class="postContentTable">
    #foreach ($reply in $children)
    <tr>
        <td>
        <b>Tytuł: </b>
        <a href="$cmsLink.set('mid',$reply.getId()).set('state','m')">
            $reply.getName()
        </a>,
        <b>Nadawca:</b> #cms_personal_credentials($reply.createdBy) ,
        <b>Data:</b> $format_date.format($reply.getCreationTime())
        </td>
    </tr>
    #end
  </table>

#commandbar()

#else
Dyskusja została zablokowana przez administratora.
#end
