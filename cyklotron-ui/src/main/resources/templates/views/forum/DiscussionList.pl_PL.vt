  #genericScreenHeader('ZARZĄDZANIE FORAMI DYSKUSYJNYMI')

  #result_inline_message('results.forum')

  #if($from_component)
    $discussions_table.getColumn('delete').set('label', 'Wybierz')
    $comments_table.getColumn('delete').set('label', 'Wybierz')
