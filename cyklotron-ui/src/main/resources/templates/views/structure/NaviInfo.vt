    <tr align="right">
      <td width="90%"></td>
      <td nowrap="nowrap" class="usualbutton">
        <a href="$tableLink.action('table.ToggleView')">##
        #if($table.viewAsTree) list view #else tree view #end##
        </a>##
      </td>
    </tr>
