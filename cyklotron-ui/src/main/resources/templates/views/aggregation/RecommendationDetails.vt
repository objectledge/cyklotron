</script>
#if(($cms_data.site == $rec.targetSite && $rec.status == 0) || $rec.status == 2)
<br/>
<table class="genericScreen" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <th>New comment.</th>
  </tr>
  <tr>
    <td><textarea name="comment" style="width:100%;" rows="6"></textarea>
  </tr>
</table>
#end
