###set($lsid = $data.parameters.get('lsid','-1'))

  #set($linkLink = $link.set('lsid',$pool.getParent().getId()))
  #set($monthNames = $i18n.useApplication('calendar').usePrefix('ofmonths'))

  <form name="form1" method="post" action="$linkLink.view("link,PoolList").action("link,UpdatePool")" class="defaultForm">
    <input type="hidden" name="pid" value="$pool.getId()" size="30">

      #genericScreenHeader('INFORMACJE O ZESTAWIE')
      
      <table class="genericScreen" width="100%" cellspacing="0">
        
        <tr>
          <td><b>Nazwa zestawu:</b></td>
          <td>
            <input type="text" name="title" value="$!html_entity_encoder.encodeAttribute($data.parameters.get('title',$pool.name))" size="30">
          </td>
        </tr>
        
        <tr>
          <td><b>Krótki opis zestawu:</b></td>
          <td>
            <input type="text" name="description" value="$!html_entity_encoder.encodeAttribute($data.parameters.get('description',$pool.description))" size="30">
          </td>
        </tr>
        
	<tr>
          <td><b>Liczba odsyłaczy w zestawie:</b></td>
          <td>
            $pool.getLinks().size()
          </td>
        </tr>
        
        <tr>
          <td nowrap colspan="2" align="right">
            <a href="javascript:document.form1.submit();">Zapisz zmiany</a> &nbsp;
            <a href="$linkLink.view("link,PoolList")">Zaniechaj</a> &nbsp;
          </td>
        </tr>
        
      </table>
      
      #genericScreenTrailer()

  </form>
  
